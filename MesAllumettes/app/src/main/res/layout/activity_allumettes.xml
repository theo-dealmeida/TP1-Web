<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.mesallumettes.view.Allumettes
        android:id="@+id/allumettes"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:id='@+id/scroll'
        android:layout_width="match_parent"
        android:layout_height="315dp"

        android:layout_below="@+id/allumettes"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </ScrollView>

    <Button
        android:id="@+id/demarrer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:onClick="dÃ©marrer"
        android:text="@string/demarrer" />

    <Button
        android:id="@+id/valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="198dp"
        android:layout_toStartOf="@+id/demarrer"
        android:layout_alignTop="@id/demarrer"
        android:text="@string/valider" />
</RelativeLayout>